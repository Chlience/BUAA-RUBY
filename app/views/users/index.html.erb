<div style="margin-top:20px;margin-bottom:30px">
  <h1 style="text-align:center">用户管理</h1>
</div>
<div class="container manage-table-container" >
  <table class="table">
    <thead>
      <tr>
        <th scope="col">用户 ID</th>
        <th scope="col">用户名</th>
        <th scope="col">email</th>
        <th scope="col">注册时间</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"> <%= user.id %> </th>
          <td> <%= user.username %> </td>
          <td> <%= user.email %> </td>
          <td> <%= user.created_at %> </td>
          <td>
            <div class="btn-group me-2">
              <%= link_to edit_user_path(user), class:"btn btn-sm btn-outline-secondary" do %>
                编辑用户
              <% end %>
              <%= link_to user_path(user), class:"btn btn-sm btn-outline-secondary", data: { turbo_method: :delete, turbo_confirm: '确定要删除该用户吗？'} do %>
                删除用户
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
