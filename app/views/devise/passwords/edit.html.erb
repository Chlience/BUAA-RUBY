<div style="display:flex; justify-content: center; align-items: center;height:100%">
  <div id="login-container">
    <h2>Change your password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field">
        <%= f.label :password, "New password" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: @minimum_password_length ? @minimum_password_length.to_s + " characters minimum" : ""  %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Change my password", class: "btn btn-primary mb-3" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
