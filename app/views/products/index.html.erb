<h1>商品管理</h1>
<div class="container manage-table-container" >
  <div>
    <%= link_to "新建商品", new_product_path, class:"btn btn-primary" %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">名称</th>
        <th scope="col"></th>
        <th scope="col">描述</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <th scope="row"> <%= product.id %> </th>
          <td>
            <%= image_tag(product.product_url, class: "product_pic") %>
          </td>
          <td>
            <%= product.product_name %>
          </td>
          <td> <%= product.description %> </td>
          <td>
            <div class="btn-group me-2">
              <%= link_to product, class:"btn btn-sm btn-outline-secondary" do %>
                商品页面
              <% end %>
              <%= link_to edit_product_path(product), class:"btn btn-sm btn-outline-secondary" do %>
                管理商品
              <% end %>
              <%= link_to product_path(product), class:"btn btn-sm btn-outline-secondary", data: { turbo_method: :delete, turbo_confirm: '确定要删除该商品吗？'} do %>
                删除商品
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
